@using BookstoreNew.Models
@model IEnumerable<Author>

@{
    ViewData["Title"] = "Author";
    int i = 1;
}

<h1 class="text-decoration-underline text-center text-info">Authors</h1>

<p>
    <a asp-controller="Author" asp-action="CreateAuthor" class="btn btn-outline-info">Create New Author</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Full Name</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td scope="row" class="font-weight-bold">
                @(i++)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td scope="row">
                <a href='@Url.Action("EditBook", new {  id=item.Id  } )'><i class="bi bi-pencil-square"></i></a>
                <a href='@Url.Action("DetailsBook", new {  id=item.Id  } )'><i class="bi bi-calendar3-week"></i></a>
                <a href='@Url.Action("DeleteBook", new {  id=item.Id  } )'><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
