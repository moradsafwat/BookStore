@model BookstoreNew.Models.Author

@{
    ViewData["Title"] = "Edit";
    //Layout = "EditAuthor";
}

<h1 class="text-info">Edit Author</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Author" asp-action="EditAuthor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Author" asp-action="Author" class="btn btn-outline-info">Back to List</a>

            </div>
        </form>
    </div>
</div>


